<%= form_for [@event, @performance], html: { multipart: true} do |form| %>
  <div class="page-wrapper">
    <div class="article-wrapper">
      <div class="card">
        <div class="card-body">
          <% if["edit"].include?(params[:action])%>
            <h1 class="title text-center"> UPDATE PERFORMNACE</h1>
          <% else %>
            <h1 class="title text-center"> CREATE PERFORMANCE</h1>
          <% end %>
          <br />
          <div class="form-group row">
            <%= form.label :title, for: "event name", class:"col-12 col-sm-3 col-md-3 col-lg-2 col-form-label font-weight-bold"%>
            <div class="col-12 col-sm-9 col-md-9 col-lg-10">
              <%= form.text_field :title, for: "performance title", class: "form-control", autofocus: true, placeholder: "Enter Event name", required: true %>
            </div>
          </div>
          
          <div class="form-group row">
            <%= form.label :description, for: "performance description", class:"col-12 col-sm-3 col-md-3 col-lg-2 col-form-label font-weight-bold"%>
            <div class="col-12 col-sm-9 col-md-9 col-lg-10">
              <%= form.text_area :description,for: "event description", rows: "15", cols: "150", class: "form-control description-field", autofocus: true, placeholder: "Enter description" %>
            </div>
          </div>
          <div class="form-group row">
            <%= form.label :attachment, for: "event picture", class:"col-12 col-sm-3 col-md-3 col-lg-2 col-form-label font-weight-bold"%>
            <div class="col-12 col-sm-9 col-md-9 col-lg-10">
              <%= form.file_field :enemt_image, for: "article image", class: "form-control"%>
            </div>
          </div>

          <div class="row">
            <div class="col-12 text-center">
              <% if["edit"].include?(params[:action])%>
                <%= form.submit "UPDATE", class:"btn btn-success btn-lg" %>
              <% else %>
                <%= form.submit "CREATE", class:"btn btn-primary btn-lg" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>