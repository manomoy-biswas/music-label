<div class="performer">
  <div class="row">
    <div class="col-12 col-sm-11">
      <div class="form-group row">
        <%= f.label :name,"Performer Name", for: "name", class:"col-12 col-sm-4 col-md-2 col-form-label font-weight-bolder"%>
        <div class="col-12 col-sm-8 col-md-10">
          <%= f.text_field :name, class: "form-control", placeholder: "Enter performer name", required: true %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :description,"Description", for: "name", class:"col-12 col-sm-4 col-md-2 col-form-label font-weight-bolder"%>
        <div class="col-12 col-sm-8 col-md-10">
          <%= f.text_area :description, class: "form-control", placeholder: "Enter Description", required:
              true %>
        </div>
      </div>
    </div>
    <div class="col-12 col-sm-1">
      <%= f.hidden_field :_destroy %>
      <%= link_to "", "#", class: "remove-field fa fa-minus-circle" %>
    </div>
  </div>
</div>
